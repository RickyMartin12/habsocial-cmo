<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="pareceresesTable"
        messagesPack="pt.cmolhao.web.pareceres">
    <data readOnly="true">
        <collection id="pareceresesDc"
                    class="pt.cmolhao.entity.Pareceres"
                    view="pareceres-view">
            <loader id="pareceresesDl">
                <query>
                    <![CDATA[select e from cmolhao_Pareceres e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="pareceresesTable"
            spacing="true">
        <filter id="filter"
                applyTo="pareceresesTable"
                dataLoader="pareceresesDl">
            <properties include=".*"/>
        </filter>
        
<groupTable id="pareceresesTable"
        width="100%"
        dataContainer="pareceresesDc">
    <actions>
        <action id="create" type="create"/>
    
        <action id="edit" type="edit"/>
    
        <action id="remove" type="remove"/>
    
    </actions>
    <columns>
        <column  id="nome"/>
    
    </columns>
    <rowsCount/>
    <buttonsPanel id="buttonsPanel"
                  alwaysVisible="true">
        
            <button id="createBtn" action="pareceresesTable.create"/>                
        
            <button id="editBtn" action="pareceresesTable.edit"/>                
        
            <button id="removeBtn" action="pareceresesTable.remove"/>                
        
    </buttonsPanel>
</groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>                
</window>
