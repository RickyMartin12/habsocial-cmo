<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"

        focusComponent="form"
        messagesPack="pt.cmolhao.web.passwords">
    <data>
        <instance id="userDc"
                  class="com.haulmont.cuba.security.entity.User"
                  view="user.edit">
            <loader/>
            <collection id="userRolesDc" property="userRoles"/>
            <collection id="substitutionsDc" property="substitutions"/>
        </instance>
    </data>
    <dialogMode height="250"
                width="670"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="userDc">
                <column width="250px">
                    <label id="idUser" property="id" visible="false"  />
                    <textField id="loginField" property="login" editable="false" caption="Nome do Utilizador: " visible="false"/>
                    <passwordField id="passwordField" required="true" caption="Password: " requiredMessage="Preencher o campo 'Password' "/>
                    <passwordField id="ConfpasswordField" required="true" caption="Confirmar Password: " requiredMessage="Preencher o campo 'Confirmar Password'"/>
                    <label visible="false" id="encrp_passw" property="password" />
                </column>
            </form>

        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
