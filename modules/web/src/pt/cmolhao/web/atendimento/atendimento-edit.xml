<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="pt.cmolhao.web.atendimento">
    <data>
        <instance id="atendimentoDc"
                  class="pt.cmolhao.entity.Atendimento"
                  view="atendimento-view">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="atendimentoDc">
                <column width="250px">
                    <textField id="contactosEfetuadosField" property="contactosEfetuados"/>
                    <dateField id="dataAtendimentoField" property="dataAtendimento"/>
                    <pickerField id="idAtendimentoEncaminhamentoField" property="idAtendimentoEncaminhamento">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <pickerField id="idAtendimentoObjetivoField" property="idAtendimentoObjetivo">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <pickerField id="idTecnicoField" property="idTecnico">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <pickerField id="idTipoAtendimentoField" property="idTipoAtendimento">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <pickerField id="idUtenteField" property="idUtente">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <textField id="objetivoOutrosField" property="objetivoOutros"/>
                    <textField id="obsConfField" property="obsConf"/>
                    <textField id="obsGeraisField" property="obsGerais"/>
                    <textField id="outrosEncaminhamentosField" property="outrosEncaminhamentos"/>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
