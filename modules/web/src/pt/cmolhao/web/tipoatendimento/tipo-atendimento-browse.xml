<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="tipoAtendimentoesTable"
        messagesPack="pt.cmolhao.web.tipoatendimento">
    <data readOnly="true">
        <collection id="tipoAtendimentoesDc"
                    class="pt.cmolhao.entity.TipoAtendimento"
                    view="_local">
            <loader id="tipoAtendimentoesDl">
                <query>
                    <![CDATA[select e from cmolhao_TipoAtendimento e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="tipoAtendimentoesTable"
            spacing="true">
        <filter id="filter"
                applyTo="tipoAtendimentoesTable"
                dataLoader="tipoAtendimentoesDl">
            <properties include=".*"/>
        </filter>
        <table id="tipoAtendimentoesTable"
               width="100%"
               dataContainer="tipoAtendimentoesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="tipoAtendimento"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="tipoAtendimentoesTable.create"/>
                <button id="editBtn" action="tipoAtendimentoesTable.edit"/>
                <button id="removeBtn" action="tipoAtendimentoesTable.remove"/>
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
