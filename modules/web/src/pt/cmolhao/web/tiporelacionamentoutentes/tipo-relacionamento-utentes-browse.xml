<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="tipoRelacionamentoUtentesesTable"
        messagesPack="pt.cmolhao.web.tiporelacionamentoutentes">
    <data readOnly="true">
        <collection id="tipoRelacionamentoUtentesesDc"
                    class="pt.cmolhao.entity.TipoRelacionamentoUtentes"
                    view="_local">
            <loader id="tipoRelacionamentoUtentesesDl">
                <query>
                    <![CDATA[select e from cmolhao_TipoRelacionamentoUtentes e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.tipoRelacionamento = :tipoRelacionamento</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.tipoRelacionamentoInv = :tipoRelacionamentoInv</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="tipoRelacionamentoUtentesesTable"
            spacing="true">

        <groupBox caption="Filtros de Pesquisa"
                  collapsable="true"
                  spacing="true"
                  icon="font-icon:FILTER"
                  width="100%">

            <scrollBox spacing="true">
                <hbox spacing="true">


                    <grid spacing="true">
                        <columns>
                            <column/>
                            <column flex="1"/>
                            <column/>
                            <column flex="1"/>
                        </columns>
                        <rows>
                            <row>
                                <lookupField
                                    inputPrompt="(Seleccione o tipo de relacionamento)"
                                    property="tipoRelacionamento"
                                    id="tipoRelacionamentoField"
                                    width="400px"
                                    icon="font-icon:GROUP" caption="Tipo de Relacionamento: "/>
                                <lookupField
                                        inputPrompt="(Seleccione o tipo de relacionamento invertido)"
                                        property="tipoRelacionamentoInv"
                                        width="400px"
                                        editable="false"
                                        id="tipoRelacionamentoInvField"
                                        icon="font-icon:GROUP" caption="Tipo de Relacionamento Invertido: "/>
                            </row>
                        </rows>
                    </grid>
                </hbox>


                <hbox spacing="true">
                    <button id="reset_tipo_relacionamento_utentes" icon="ERASER" caption="Limpar" />
                    <button id="search_tipo_relacionamento_utentes" caption="Pesquisar" icon="SEARCH" stylename="info" />
                </hbox>
            </scrollBox>
        </groupBox>

        <hbox spacing="true">
            <lookupField id="linhastipoRelacionamento"
                         caption="Mostrar Numero de Linhas"
                         inputPrompt="(seleccione o numero de linhas)"
                         icon="ARROWS_V"/>
        </hbox>

        <table id="tipoRelacionamentoUtentesesTable"
               width="100%"
               dataContainer="tipoRelacionamentoUtentesesDc"
               emptyStateMessage="NÃ£o Existe Dados na Tabela"
               emptyStateLinkMessage="Adicione Dados na Tabela(Ctrl+\)">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove">
                    <properties>
                        <property name="confirmation" value="true"/>
                        <property name="confirmationTitle" value="Remover a linha da tabela de Tipo Relaciomento do Utente"/>
                        <property name="confirmationMessage" value="Tens a certeza que quer remover esta linha de Tipo Relaciomento do Utente?"/>
                    </properties>
                </action>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="tipoRelacionamento"/>
                <column id="tipoRelacionamentoInv"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="tipoRelacionamentoUtentesesTable.create" caption="Criar" icon="font-icon:PLUS" stylename="primary"/>
                <button id="editBtn" action="tipoRelacionamentoUtentesesTable.edit" caption="Editar" icon="font-icon:PENCIL" stylename="info"/>
                <button id="removeBtn" action="tipoRelacionamentoUtentesesTable.remove" caption="Remover" icon="font-icon:TRASH" stylename="danger"/>
                <button id="excelBtn" action="tipoRelacionamentoUtentesesTable.excel" stylename="friendly" />
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
