<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="habitacaoSocialsTable"
        messagesPack="pt.cmolhao.web.habitacaosocial">

    <data readOnly="true">

        <collection id="habitacaoSocialsDc"
                    class="pt.cmolhao.entity.HabitacaoSocial"
                    view="habitacaoSocial-view">
            <loader id="habitacaoSocialsDl">
                <query>
                    <![CDATA[select e from cmolhao_HabitacaoSocial e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.arrend = :arrend</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.bl = :bl</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:join>join e.bloc i</c:join>
                                <c:where>i.id = :bloc</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:join>join e.idUtente j</c:join>
                                <c:where>j.id = :idUtente</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.fichaCompleta = :fichaCompleta</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.freguesia = :freguesia</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.localidade = :localidade</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.codPostal like :codPostal</c:where>
                            </c:jpql>
                        </and>

                    </condition>
                </query>
            </loader>
        </collection>

        <collection id="customersDc"
                    class="pt.cmolhao.entity.BlocosHabitacaoSocial"
                    view="_local">
            <loader id="customersLoader">
                <query>
                    <![CDATA[select e from cmolhao_BlocosHabitacaoSocial e]]>
                </query>
            </loader>
        </collection>

        <keyValueCollection id="hab_arred_id">
            <properties>
                <property name="arrend" datatype="string" />
            </properties>
            <loader id="hab_arred_id_loader">
                <query>
                    <![CDATA[select o.arrend as arrend from cmolhao_HabitacaoSocial o where o.bl is not null group by o.arrend]]>
                </query>
            </loader>
        </keyValueCollection>

        <keyValueCollection id="hab_bl_id">
            <properties>
                <property name="bl" datatype="string" />
            </properties>
            <loader id="hab_bl_id_loader">
                <query>
                    <![CDATA[select o.bl as bl from cmolhao_HabitacaoSocial o where o.arrend is not null group by o.bl]]>
                </query>
            </loader>
        </keyValueCollection>

        <collection id="UtentesDC"
                    class="pt.cmolhao.entity.Utente"
                    view="_local">
            <loader id="utentesLoader">
                <query>
                    <![CDATA[select e from cmolhao_Utente e]]>
                </query>
            </loader>
        </collection>

        <keyValueCollection id="hab_freguesia_id">
            <properties>
                <property name="freguesia" datatype="string" />
            </properties>
            <loader id="hab_freguesia_id_loader">
                <query>
                    <![CDATA[select o.freguesia as freguesia from cmolhao_HabitacaoSocial o where o.freguesia is not null group by o.freguesia]]>
                </query>
            </loader>
        </keyValueCollection>

        <keyValueCollection id="hab_localidade_id">
            <properties>
                <property name="localidade" datatype="string" />
            </properties>
            <loader id="hab_localidade_id_loader">
                <query>
                    <![CDATA[select o.localidade as localidade from cmolhao_HabitacaoSocial o where o.localidade is not null group by o.localidade]]>
                </query>
            </loader>
        </keyValueCollection>



    </data>
    <dialogMode height="600"
                width="800"/>

    <layout expand="habitacaoSocialsTable"
            spacing="true">
        <!--<filter id="filter"
                applyTo="habitacaoSocialsTable"
                dataLoader="habitacaoSocialsDl"
                caption="Filtros de Pesquisa">
            <properties include=".*"/>

            <custom caption="Bloco da Habitação Social: "
                    join="join {E}.bloc i"
                    name="HabitacaoSocial"
                    paramClass="pt.cmolhao.entity.BlocosHabitacaoSocial">
                i.id = ?
            </custom>
        </filter>-->
            <groupBox caption="Filtros de Pesquisa"
                      collapsable="true"
                      spacing="true"
                      icon="font-icon:FILTER"
                      width="100%">

                <hbox spacing="true">
                    <lookupField
                            property="bloc"
                            id="blocField"
                            optionsContainer="customersDc"
                            inputPrompt="(Seleccione a morada do bloco de habitação social)"
                            icon="font-icon:HOME" caption="Morada do Bloco de Habitacao Social"/>

                    <lookupField id="luke_hab"
                                 optionsContainer="hab_arred_id"
                                 caption="Numero de Renda:"
                                 inputPrompt="(seleccione o numero de renda)"
                                 icon="font-icon:SORT_NUMERIC_ASC"
                                 />
                    <lookupField id="hab_bloco"
                                 optionsContainer="hab_bl_id"
                                 caption="Numero de Bloco:"
                                 inputPrompt="(seleccione o numero de bloco)"
                                 icon="font-icon:SORT_NUMERIC_ASC"
                    />

                </hbox>

                <hbox spacing="true">

                    <lookupField
                            property="idUtente"
                            id="utenteField"
                            optionsContainer="UtentesDC"
                            icon="font-icon:ID_CARD" caption="Nome e Identificação do Utente: "
                            inputPrompt="(Seleccione o nome e a identificação do utente)"/>

                    <label id="text_fichaCompleta" icon="FILES_O"/>
                    <checkBox id="fichaCompletaField" property="fichaCompleta" />


                    <lookupField id="hab_freg_id"
                                 optionsContainer="hab_freguesia_id"
                                 caption="Freguesia/Concelho da Habitação Social:"
                                 inputPrompt="(seleccione a freguesia da habitação social)"
                                 icon="font-icon:INSTITUTION"
                    />


                </hbox>

                <hbox spacing="true">


                    <lookupField id="hab_loc_id"
                                 optionsContainer="hab_localidade_id"
                                 caption="Localidade da Habitação Social:"
                                 inputPrompt="(seleccione a localidade da habitação social)"
                                 icon="font-icon:MAP"
                    />

                    <textField id="codPostalField" property="codPostal"
                                 caption="Código Postal: "
                                 inputPrompt="(Insira o código postal)"
                                 icon="MAP_SIGNS" maxLength="8"/>


                    <lookupField id="linhasHabSocial"
                                 caption="Mostrar Numero de Linhas"
                                 inputPrompt="(seleccione o numero de linhas)"
                                 icon="ARROWS_V"/>

                </hbox>

                <hbox spacing="true">
                    <button id="click" caption="Pesquisar" icon="SEARCH" stylename="info" />
                    <button id="reset_search_hab_social" icon="ERASER" caption="Limpar" />
                </hbox>


            </groupBox>


        <groupTable id="habitacaoSocialsTable"
                    width="100%"
                    dataContainer="habitacaoSocialsDc"
                    emptyStateMessage="Não Existe Dados na Tabela"
                    emptyStateLinkMessage="Adicione Dados na Tabela(Ctrl+\)">


            <actions>

                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove">
                        <properties>
                            <property name="confirmation" value="true"/>
                            <property name="confirmationTitle" value="Remover a linha da tabela da habitação social."/>
                            <property name="confirmationMessage" value="Tens a certeza que quer remover esta linha da tabela da habitação social?"/>

                        </properties>
                </action>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <!--<column id="id"/>-->
                <column id="arrend" caption="Número de Renda"/>
                <column id="bl" caption="Número de Bloco"/>
                <column id="coord" caption="Coordenadas da Habitação Social" />
                <column id="bloc" caption="Designacao da Habitação Social"/>

                <column id="cod" caption="Codigo de Habitação Social"/>
                <column id="codbr" caption="Bloco de Habitação Social"/>

                <column id="eqsocial" caption="Eq Social"/>
                <column id="t0" caption="Apartamento T0"/>

                <column id="t1" caption="Apartamento T1"/>
                <column id="t2" caption="Apartamento T2"/>

                <column id="t3" caption="Apartamento T3"/>
                <column id="t4" caption="Apartamento T4"/>

                <column id="t5" caption="Apartamento T5"/>
                <column id="vend" caption="Apartamento vendido"/>

                <column id="rua" caption="Rua/Morada" />
                <column id="numpolicia" caption="Numero de Policia" />

                <column id="freguesia" caption="Freguesia/Concelho" />
                <column id="codPostal" caption="Código Postal" />

                <column id="localidade" caption="Localidade" />
                <column id="sitoLugar" caption="Sitio/Lugar" />

                <column id="obsgerais" caption="Observações Gerais" />
                <column id="obsconf" caption="Observações de Configuração" />

                <column id="fichaCompleta" caption="Ficha Completa" />
                <column id="idUtente" caption="Utente" />

                <column id="valorPatrimonio" caption="Valor do Património" generator="generateValorPatrimonio"/>
                <column id="rendimentoAnual" caption="Rendimento Anual" generator="generateRendimentoAnual"/>

            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="habitacaoSocialsTable.create" caption="Criar" icon="font-icon:PLUS" stylename="primary"/>
                <button id="editBtn" action="habitacaoSocialsTable.edit" caption="Editar" icon="font-icon:PENCIL" stylename="info" />
                <button id="removeBtn" action="habitacaoSocialsTable.remove" caption="Remover" icon="font-icon:TRASH" stylename="danger"/>
                <button action="habitacaoSocialsTable.excel" stylename="friendly"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
