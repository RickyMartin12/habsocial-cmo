<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="tiposSituacoesUtentesesTable"
        messagesPack="pt.cmolhao.web.tipossituacoesutentes">
    <data readOnly="true">
        <collection id="tiposSituacoesUtentesesDc"
                    class="pt.cmolhao.entity.TiposSituacoesUtentes"
                    view="_local">
            <loader id="tiposSituacoesUtentesesDl">
                <query>
                    <![CDATA[select e from cmolhao_TiposSituacoesUtentes e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="tiposSituacoesUtentesesTable"
            spacing="true">
        <filter id="filter"
                applyTo="tiposSituacoesUtentesesTable"
                dataLoader="tiposSituacoesUtentesesDl">
            <properties include=".*"/>
        </filter>
        <table id="tiposSituacoesUtentesesTable"
               width="100%"
               dataContainer="tiposSituacoesUtentesesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="descricaoSituacao"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="tiposSituacoesUtentesesTable.create"/>
                <button id="editBtn" action="tiposSituacoesUtentesesTable.edit"/>
                <button id="removeBtn" action="tiposSituacoesUtentesesTable.remove"/>
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
