<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="rendimentosUtentesTable"
        messagesPack="pt.cmolhao.web.rendimentosutente">
    <data readOnly="true">
        <collection id="rendimentosUtentesDc"
                    class="pt.cmolhao.entity.RendimentosUtente"
                    view="rendimentosUtente-view">
            <loader id="rendimentosUtentesDl">
                <query>
                    <![CDATA[select e from cmolhao_RendimentosUtente e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="rendimentosUtentesTable"
            spacing="true">
        <filter id="filter"
                applyTo="rendimentosUtentesTable"
                dataLoader="rendimentosUtentesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="rendimentosUtentesTable"
                    width="100%"
                    dataContainer="rendimentosUtentesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="ano"/>
                <column id="idTipoRendimento"/>
                <column id="idUtente"/>
                <column id="valorRendimento"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="rendimentosUtentesTable.create"/>
                <button id="editBtn" action="rendimentosUtentesTable.edit"/>
                <button id="removeBtn" action="rendimentosUtentesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
