<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="situacaoUtentesTable"
        messagesPack="pt.cmolhao.web.situacaoutente">
    <data readOnly="true">
        <collection id="situacaoUtentesDc"
                    class="pt.cmolhao.entity.SituacaoUtente"
                    view="situacaoUtente-view">
            <loader id="situacaoUtentesDl">
                <query>
                    <![CDATA[select e from cmolhao_SituacaoUtente e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="situacaoUtentesTable"
            spacing="true">
        <filter id="filter"
                applyTo="situacaoUtentesTable"
                dataLoader="situacaoUtentesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="situacaoUtentesTable"
                    width="100%"
                    dataContainer="situacaoUtentesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="dataFim"/>
                <column id="dataInicio"/>
                <column id="idTiposSituacaoUtentes"/>
                <column id="idUtente"/>
                <column id="obsGerais"/>
                <column id="obserConf"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="situacaoUtentesTable.create"/>
                <button id="editBtn" action="situacaoUtentesTable.edit"/>
                <button id="removeBtn" action="situacaoUtentesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
