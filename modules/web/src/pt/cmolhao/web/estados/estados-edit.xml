<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="pt.cmolhao.web.estados">
    <data>
        <instance id="estadosDc"
                  class="pt.cmolhao.entity.Estados"
                  view="_local">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="estadosDc">
            <column width="250px">
                <textField id="idEstadosField" property="id" visible="false" />
                <textField id="estadosProcessosField" property="estadosProcessos" caption="Estado do Processo:" icon="REFRESH_ACTION"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose" caption="Salvar" icon="SAVE" stylename="friendly"/>
            <button caption="Fechar" action="windowClose" icon="CLOSE"/>
        </hbox>
    </layout>
</window>
