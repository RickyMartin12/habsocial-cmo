<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="projectosIntervencaosTable"
        messagesPack="pt.cmolhao.web.projectosintervencao">
    <data readOnly="true">
        <collection id="projectosIntervencaosDc"
                    class="pt.cmolhao.entity.ProjectosIntervencao"
                    view="projectosIntervencao-view">
            <loader id="projectosIntervencaosDl">
                <query>
                    <![CDATA[select e from cmolhao_ProjectosIntervencao e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:join>join e.idinstituicao i</c:join>
                                <c:where>i.id = :idinstituicao</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.pretendealargarservicos = :pretendealargarservicos</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.criancas = :criancas</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.jovens = :jovens</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.adultos = :adultos</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.idosos = :idosos</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.comunidade = :comunidade</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.deficientes = :deficientes</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.idososlar = :idososlar</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.idosospequenolar = :idosospequenolar</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.idososcentrodia = :idososcentrodia</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.idososcat = :idososcat</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.idososapoiodomiciliario = :idososapoiodomiciliario</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.jovensjardiminfancia = :jovensjardiminfancia</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.jovenscreche = :jovenscreche</c:where>
                            </c:jpql>

                            <c:jpql>
                                <c:where>e.jovensatl = :jovensatl</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.jovenscat = :jovenscat</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.deficientescao = :deficientescao</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.deficienteslarresidencial = :deficienteslarresidencial</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.deficientesapoiodomiciliario = :deficientesapoiodomiciliario</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.projectosemaprovacao = :projectosemaprovacao</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>

        <collection id="InstituicaoDc"
                    class="pt.cmolhao.entity.Instituicoes"
                    view="_local">
            <loader id="ins_Loader">
                <query>
                    <![CDATA[select e from cmolhao_Instituicoes e]]>
                </query>
            </loader>
        </collection>



    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="projectosIntervencaosTable"
            spacing="true">

        <groupBox caption="Filtros de Pesquisa"
                  collapsable="true"
                  spacing="true"
                  icon="font-icon:FILTER"
                  width="100%">

            <scrollBox spacing="true">
            <hbox spacing="true">

                <lookupField
                    inputPrompt="(Seleccione a designação da instituição da valência)"
                    property="idinstituicao"
                    id="idinstituicaoField"
                    optionsContainer="InstituicaoDc"
                    icon="font-icon:BUILDING" caption="Designação da Instituição da valencia: "/>

                <lookupField id="linhasProjectosIntervencao"
                             caption="Mostrar Numero de Linhas"
                             inputPrompt="(seleccione o numero de linhas)"
                             icon="ARROWS_V"/>

            </hbox>
            <hbox spacing="true">

                <label id="text_pretende_algarga_servicos" icon="font-icon:COGS" />
                <checkBox id="pretendealargarservicosField" property="pretendealargarservicos" />

                <label id="text_criancas" icon="CHILD" />
                <checkBox id="criancasField" property="criancas" />

                <label id="text_jovens" icon="CHILD" />
                <checkBox id="jovensField" property="jovens" />

                <label id="text_adultos" icon="MALE" />
                <checkBox id="adultosField" property="adultos" />

                <label id="text_idosos" icon="BLIND" />
                <checkBox id="idososField" property="idosos" />

                <label id="text_comunidade" icon="GROUP" />
                <checkBox id="comunidadeField" property="comunidade" />

                <label id="text_deficientes" icon="WHEELCHAIR" />
                <checkBox id="deficientesField" property="deficientes" />

                <label id="text_idososlar" icon="INSTITUTION" />
                <checkBox id="idososlarField" property="idososlar" />

            </hbox>

            <hbox spacing="true">

                <label id="text_idosospequenolar" icon="HOME" />
                <checkBox id="idosospequenolarField" property="idosospequenolar" />

                <label id="text_idososcentrodia" icon="HOME" />
                <checkBox id="idososcentrodiaField" property="idososcentrodia" />

                <label id="text_idososcat" icon="BLIND" />
                <checkBox id="idososcatField" property="idososcat" />

                <label id="text_idososapoiodomiciliario" icon="HOME"/>
                <checkBox id="idososapoiodomiciliarioField" property="idososapoiodomiciliario" />

                <label id="text_jovensjardiminfancia" icon="ENVIRA"/>
                <checkBox id="jovensjardiminfanciaField" property="jovensjardiminfancia" />

            </hbox>

            <hbox spacing="true">
                <label id="text_jovensatl" icon="INSTITUTION"/>
                <checkBox id="jovensatlField" property="jovensatl" />

                <label id="text_jovenscat" icon="CHILD"/>
                <checkBox id="jovenscatField" property="jovenscat" />

                <label id="text_deficientescao" icon="WHEELCHAIR_ALT"/>
                <checkBox id="deficientescaoField" property="deficientescao" />

                <label id="text_deficienteslarresidencial" icon="HOME"/>
                <checkBox id="deficienteslarresidencialField" property="deficienteslarresidencial" />

                <label id="texdeficientesapoiodomiciliario" icon="HOME"/>
                <checkBox id="deficientesapoiodomiciliarioField" property="deficientesapoiodomiciliario" />


            </hbox>

            <hbox spacing="true">

                <label id="text_jovenscreche" icon="INSTITUTION"/>
                <checkBox id="jovenscrecheField" property="jovenscreche" />

                <label id="text_projectosemaprovacao" icon="PASTE"/>
                <checkBox id="projectosemaprovacaoField" property="projectosemaprovacao" />

            </hbox>

            <hbox spacing="true">
                <button id="search_projectos_intervencao" caption="Pesquisar" icon="SEARCH" stylename="info" />
                <button id="reset_search_projectos_intervencao" icon="ERASER" caption="Limpar" />
            </hbox>
            </scrollBox>

        </groupBox>
        <groupTable id="projectosIntervencaosTable"
                    width="100%"
                    dataContainer="projectosIntervencaosDc"
                    emptyStateMessage="Não Existe Dados na Tabela"
                    emptyStateLinkMessage="Adicione Dados na Tabela(Ctrl+\)">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove">
                    <properties>
                        <property name="confirmation" value="true"/>
                        <property name="confirmationTitle" value="Remover a linha da tabela do Projectos de Intervenção."/>
                        <property name="confirmationMessage" value="Tens a certeza que quer remover esta linha da tabela de Projectos de Intervenção?"/>
                    </properties>
                </action>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="idinstituicao" caption="Nome da Instituição"/>
                <column id="projectosemaprovacao" caption="Projectos em Aprovação"/>
                <column id="adultos" caption="Adultos"/>
                <column id="idosos" caption="Idosos"/>
                <column id="jovens" caption="Jovens"/>
                <column id="comunidade" caption="Comunidade"/>
                <column id="criancas" caption="Crianças"/>
                <column id="deficientes" caption="Deficientes"/>
                <column id="deficientesapoiodomiciliario" caption="Deficientes de Apoio Domiciliário"/>
                <column id="deficientescao" caption="Categoria dos Deficientes"/>
                <column id="deficienteslarresidencial" caption="Deficientes nos Lares Residencial"/>
                <column id="idososapoiodomiciliario" caption="Idosos de Apoio Domiciliario"/>
                <column id="idososcat" caption="Categoria dos Idosos"/>
                <column id="idososcentrodia" caption="Idosos do Centro de Dia"/>
                <column id="idososlar" caption="Lares de Idosos"/>
                <column id="idosospequenolar" caption="Pequenos Lares de Idosos"/>
                <column id="jovensatl" caption="Jovens de ATL"/>
                <column id="jovenscat" caption="Categoria de Jovens"/>
                <column id="jovenscreche" caption="Jovens Creche"/>
                <column id="jovensjardiminfancia" caption="Jovens de Jardim de Infância"/>
                <column id="outrosgrupos" caption="Outros Grupos"/>
                <column id="pretendealargarservicos" caption="Pretende Serviços do Algarve"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="projectosIntervencaosTable.create" caption="Criar" icon="font-icon:PLUS" stylename="primary"/>
                <button id="editBtn" action="projectosIntervencaosTable.edit" caption="Editar" icon="font-icon:PENCIL" stylename="info"/>
                <button id="removeBtn" action="projectosIntervencaosTable.remove" caption="Remover" icon="font-icon:TRASH" stylename="danger"/>
                <button action="projectosIntervencaosTable.excel" stylename="friendly"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
