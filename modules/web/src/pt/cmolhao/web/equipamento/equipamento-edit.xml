<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="pt.cmolhao.web.equipamento">
    <data>
        <instance id="equipamentoDc"
                  class="pt.cmolhao.entity.Equipamento"
                  view="_local">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="equipamentoDc">
            <column width="250px">
                <textField id="descricaoField" property="descricao"
                           caption="Descrição: "
                           icon="ADDRESS_CARD"/>
                <textArea rows="3" cols="12"
                           id="obsGeraisField" property="obsGerais"
                          caption="Observações Gerais: " icon="FILE_TEXT_O"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose" caption="Salvar" icon="SAVE" stylename="friendly"/>
            <button caption="Fechar" action="windowClose" icon="CLOSE"/>
        </hbox>
    </layout>
</window>
