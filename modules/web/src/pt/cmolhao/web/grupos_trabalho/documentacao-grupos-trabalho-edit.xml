<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="pt.cmolhao.web.grupos_trabalho">
    <data>
        <instance id="documentacaoGruposTrabalhoDc"
                    class="pt.cmolhao.entity.DocumentacaoGruposTrabalho"
                    view="documentacaoGruposTrabalho-view">
            <loader/>
        </instance>
        
    </data>
    
    <dialogMode height="600"
                width="800"/>
<layout expand="editActions" spacing="true">
    
        

<form id="form" dataContainer="documentacaoGruposTrabalhoDc">
<column width="250px">
	
	<dateField id="dataDocumentoField" property="dataDocumento"/>
	
	<pickerField id="idRedeTrabalhoField" property="idRedeTrabalho">
		<actions><action id="lookup" type="picker_lookup"/><action id="clear" type="picker_clear"/></actions>
	</pickerField>
	
	<pickerField id="idSubRedeTrabalhoField" property="idSubRedeTrabalho">
		<actions><action id="lookup" type="picker_lookup"/><action id="clear" type="picker_clear"/></actions>
	</pickerField>
	
	<textArea id="nomeFicheiroField" property="nomeFicheiro" rows="5"/>
	
	<textArea id="numeroDocumentacaoField" property="numeroDocumentacao" rows="5"/>
	
	<upload id="fileField" fileStoragePutMode="IMMEDIATE" property="file" showFileName="true"/>
	
</column>
</form>

        
        
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
