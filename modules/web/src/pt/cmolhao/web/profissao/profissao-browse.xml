<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="profissaosTable"
        messagesPack="pt.cmolhao.web.profissao">
    <data readOnly="true">
        <collection id="profissaosDc"
                    class="pt.cmolhao.entity.Profissao"
                    view="_local">
            <loader id="profissaosDl">
                <query>
                    <![CDATA[select e from cmolhao_Profissao e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="profissaosTable"
            spacing="true">
        <filter id="filter"
                applyTo="profissaosTable"
                dataLoader="profissaosDl">
            <properties include=".*"/>
        </filter>
        <table id="profissaosTable"
               width="100%"
               dataContainer="profissaosDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="nome"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="profissaosTable.create"/>
                <button id="editBtn" action="profissaosTable.edit"/>
                <button id="removeBtn" action="profissaosTable.remove"/>
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
